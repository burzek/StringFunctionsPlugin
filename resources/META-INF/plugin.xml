<idea-plugin>
    <id>StringToolsPlugin</id>
    <name>String Tools</name>
    <version>2.0</version>
    <vendor email="boris.brinza@gmail.com" url="https://www.linkedin.com/in/boris-brinza-5768846/">MSLB</vendor>

    <description><![CDATA[
      Handy string tools<br>
      <small>Handy tools for converting (hex, binary) and encoding/decoding (URL, HTML entities, Base64) strings.</small>
      ]]>
    </description>

    <change-notes><![CDATA[
          v2.0<br>
          <small>
            <ul>Added new operations
               <li>String reverse</li>
               <li>ROT13</li>
               <li>MD5 hash</li>
               <li>SHA256 hash</li>
               <li>SHA512 hash</li>
               <li>CRC32 checksum</li>
            </ul>
          </small>
          ]]>
    </change-notes>
    <version>1.0</version>

    <idea-version since-build="145.0"/>


    <actions>
        <action class="sk.mslb.intellij.plugins.stringtools.StringToolsPluginAction" id="StringTools" text="String Tools">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut first-keystroke="control shift S" second-keystroke="T" keymap="$default"/>
        </action>
    </actions>

</idea-plugin>